<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" id="title" type="text" name="campground[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location'">Location</label>
                <input class="form-control" id="location" type="text" name="campground[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image'">Image URL</label>
                <input class="form-control" id="image" type="text" name="campground[image]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price'">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" type="text" class="form-control" placeholder="0.00"
                        aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description'">Description</label>
                <textarea class="form-control" id="description" type="text" name="campground[description]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
    </div>
</div>
